require 'spec'
require 'ostruct'

describe "message class" do
    #test for error
    it "should wrap a dict" do
        sampleDict = {"name"=>"dru"}
        msg = OpenStruct.new sampleDict
        
        msg.name.should eql 'dru'
    end
    
    it "should wrap nested dicts" do
      sampleDict = {'name'=>"dru", 'keys'=>{'one'=>'bill','two'=>2}}
      msg = OpenStruct.new sampleDict
      
      msg.name.should eql 'dru'
      msg.keys.one.should eql 'bill'
    end
end