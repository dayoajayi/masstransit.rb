require 'spec'
require "lib/masstransit"

describe "New subscription" do

  before(:each) do
    @messageType = "mt"
  end

	it "should return the message type provided" do
		subscription = MassTransit::Subscription.new @messageType, lambda { |msg| 
      puts msg 
    }
		subscription.message_name.to_s.should be @messageType
	end

end
